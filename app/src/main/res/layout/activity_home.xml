<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/app_bar_text"
        android:background="@color/purple_700"
        android:padding="32dp"
        android:text="HOME"
        android:fontFamily="sans-serif"
        android:textFontWeight="700"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/home_container"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:paddingVertical="16dp"
        android:orientation="horizontal"
        android:background="@color/purple_700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:drawableTint="@color/purple_200"
                android:textColor="@color/purple_200"
                android:id="@+id/nav_home_btn"
                android:elevation="0dp"
                android:drawableTop="@drawable/baseline_home_24"
                android:text="Home"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/nav_calculate_btn"
                android:elevation="0dp"
                android:drawableTop="@drawable/baseline_calculate_24"
                android:text="calculator"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:drawableTint="@color/white"
                android:id="@+id/nav_profile_btn"
                android:elevation="0dp"
                android:drawableTop="@drawable/baseline_person_24"
                android:text="profile"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>